{# prettier-ignore-start #} 
{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
{# prettier-ignore #}
	</head>
{% endblock %}

	<body class="{{body_class}} h-screen bg-gray-800 flex flex-col" data-template="base.twig">
		{# <a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a> #}
		<header class="header">
			{% block header %}
				<div class="wrapper container">
					<h1 class="hdr-logo" role="banner">
						<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
					</h1>
					<nav id="nav-main" class="nav-main" role="navigation">
						{% include "menu.twig" with {'items': menu.get_items} %}
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>

		<main id="content" class="content-wrapper container">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</main>

		{% block footer %}
			<footer id="footer" class="mt-auto block bg-pink-500">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
{# prettier-ignore #}
</html>
{# prettier-ignore-end #}
