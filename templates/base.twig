{# prettier-ignore-start #} 
{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
{# prettier-ignore #}
	</head>
{% endblock %}

	<body class="{{body_class}} h-screen flex flex-col" data-template="base.twig">
		{# <a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a> #}
		<header class="header">
			{% block header %}
				<div class="text-white top-bar bg-primary">
					<div class="container py-2 mx-auto text-left">
						<small class="flex justify-between">
							<a href="tel:(866) 830-3460" class="tooltip tooltipstered"> 
								<i class="icon-phone"></i> 
								<span>(866) 830-3460</span> 
							</a>
							<p class="font-semibold uppercase">
								Free Shipping in the U.S. on all orders over $75
							</p>
							<a href="#0">Newsletter</a>
						</small>
					</div>
				</div>
				<div class="container flex justify-between mx-auto wrapper">
					<div class="font-bold uppercase hdr-logo font-headingtwo" role="banner">
						<a class="hdr-logo-link" href="{{site.url}}" rel="home">
						<img src="/wp-content/uploads/2020/02/logo.png" class="">
						<span class="sr-only">{{site.name}}</span>
						</a>
					</div>
					<nav id="nav-main" class="nav-main" role="navigation">
						{% include "menu.twig" with {'items': menu.get_items} %}
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>

		<main id="content" class="container content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</main>

		{% block footer %}
			<footer id="footer" class="block mt-auto bg-pink-500">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
{# prettier-ignore #}
</html>
{# prettier-ignore-end #}
