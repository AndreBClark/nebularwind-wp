{% extends 'base.twig' %}

{% block content %}
{% set story = post.meta('story') %}
{% set mission = post.meta('mission') %}
{% set business = post.meta('business') %}
    <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
        <section class="article-content">
            <div class="article-body">
                <div class="row bg-gradient">
                    <div class="container py-10 my-auto text-white">
                        <h1 class="my-auto text-center">{{post.title}}</h1>
                    </div>
                </div>
                    {% if story %}
                    <div class="justify-between lg:flex row">
                        <div class="container w-1/2 p-20 text-center">
                            {{ story.paragraph }}
                        </div>
                        <div class="container w-1/2">
                            <img class="object-cover w-full h-156" src="{{ Image(story.image).src }}" alt="">
                        </div>
                    </div>
                    {% endif %}
                    {% if mission %}
                    <div class="justify-between lg:flex row">
                        <div class="container w-1/2">
                            <img class="object-cover w-full h-156" src="{{ Image(mission.image).src }}" alt="">
                        </div>
                        <div class="container w-1/2 p-20 text-center">
                            {{ mission.paragraph }}
                        </div>
                    </div>
                    {% endif %}
                    {% if business %}
                    <div class="justify-between lg:flex row">
                        <div class="container w-1/2 p-20 text-center">
                            {{ business.paragraph }}
                        </div>
                        <div class="container w-1/2">
                            <img class="object-cover object-bottom w-full h-156" src="{{ Image(business.image).src }}" alt="{{ Image(business.image).alt }}">
                        </div>
                    </div>
                    {% endif %}
            </div>
        </section>
    </article>
{% endblock %}